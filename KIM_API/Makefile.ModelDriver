# sanity checks
ifndef KIM_API_DIR
   $(error Make variable KIM_API_DIR must be defined)
endif
include $(KIM_API_DIR)/Makefile.SanityCheck


#build target .a or .so for models
MODEL_DRIVER_BUILD_TARGET := $(strip $(MODEL_DRIVER_NAME)).a
ifdef KIM_DYNAMIC
   MODEL_DRIVER_BUILD_TARGET += $(patsubst %.a,%.so, $(MODEL_DRIVER_BUILD_TARGET))
else
   ifneq ("1","$(MAKELEVEL)")
     MODEL_DRIVER_BUILD_TARGET += STATIC_COMP_WARNING
   endif
endif

.PHONY: STATIC_COMP_WARNING
STATIC_COMP_WARNING:
	@echo ''; \
        echo '*************************************************************************'; \
        echo '*******               Compiling in static link mode               *******'; \
        echo '*******         You probably want to execute make from the        *******'; \
        echo '*******                     $$KIM_DIR directory                    *******'; \
        echo '*************************************************************************'; \

all: $(MODEL_DRIVER_BUILD_TARGET)

$(strip $(MODEL_DRIVER_NAME)).a: $(LOCALOBJ) $(strip $(MODEL_DRIVER_NAME)).o
	ar rcs $@ $(LOCALOBJ) $(strip $(MODEL_DRIVER_NAME)).o

$(strip $(MODEL_DRIVER_NAME)).o: Makefile

Makefile: $(KIM_MAKE_FILES) $(KIM_API_DIR)/Makefile.ModelDriver
	@touch Makefile

clean:
	rm -f $(LOCALOBJ) $(strip $(MODEL_DRIVER_NAME)).o *.mod \
              $(strip $(MODEL_DRIVER_NAME)).a $(strip $(MODEL_DRIVER_NAME)).so $(LOCALCLEAN)
