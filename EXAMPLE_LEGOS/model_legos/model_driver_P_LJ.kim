MODEL_NAME := MODEL_NAME_STR
Unit_Handling    := fixed
Unit_length      := A
Unit_energy      := eV
Unit_charge      := e
Unit_temperature := K
Unit_time        := fs


#######################################################################################################
SUPPORTED_ATOM/PARTICLES_TYPES:
# Symbol/name           Type                    code

SPECIES1_NAME_STR                      spec                    1


#######################################################################################################
CONVENTIONS:
# Name                  Type

OneBasedLists           dummy

Neigh_IterAccess        dummy

Neigh_LocaAccess        dummy

NEIGH-RVEC-F            dummy

NEIGH-PURE-H            dummy

NEIGH-PURE-F            dummy

MI-OPBC-H               dummy

MI-OPBC-F               dummy

CLUSTER                 dummy


#######################################################################################################
MODEL_INPUT:
# Name                  Type         Unit                Shape              Requirements

numberOfAtoms           integer      none                []

numberContributingAtoms integer      none                []                 optional

numberAtomTypes         integer      none                []

atomTypes               integer      none                [numberOfAtoms]

coordinates             real*8       length              [numberOfAtoms,3]

boxlength               real*8       length              [3]                optional

get_half_neigh          method       none                []                 optional     # Here so it can work with more Tests

get_full_neigh          method       none                []                 optional     # Here so it can work with more Tests

neighObject             pointer      none                []


#######################################################################################################
MODEL_OUTPUT:
# Name                  Type         Unit                Shape              Requirements

destroy                 method       none                []

compute                 method       none                []

reinit                  method       none                []                 optional

cutoff                  real*8       length              []

energy                  real*8       energy              []                 optional

forces                  real*8       force               [numberOfAtoms,3]  optional

energyPerAtom           real*8       energy              [numberOfAtoms]    optional

process_d1Edr           method       none                []                 optional


#######################################################################################################
MODEL_PARAMETERS:
# Name                  Type         Unit                Shape              Requirements

PARAM_FREE_cutoff       real*8       length              []

PARAM_FREE_epsilon      real*8       energy              []

PARAM_FREE_sigma        real*8       none                []                 # should be units of 1/length

PARAM_FIXED_cutsq       real*8       none                []
 
PARAM_FIXED_shift       real*8       energy              []
